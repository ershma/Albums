<Application x:Class="Albums.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Albums"
             StartupUri="Views\MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
             <SolidColorBrush x:Key="BackColor" Color="#2b3033" />
            <SolidColorBrush x:Key="Workspace" Color="#FF212429"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles\Icon.xaml"/>
                <ResourceDictionary Source="Styles\CommonProperty.xaml"/>
                <ResourceDictionary Source="Styles\Animation.xaml"/>
                <ResourceDictionary Source="Styles\UsersControl.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>  
           
        </ResourceDictionary>
    </Application.Resources>
</Application>
